        tolerance       1e-08;
        relTol          0.2;
    }

   c_RNH2
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          0.2;
    }

   c_RNHCOO
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          0.2;
    }

}

